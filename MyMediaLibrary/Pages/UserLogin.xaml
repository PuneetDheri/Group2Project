<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMediaLibrary.Pages.UserLogin"
             Title="UserLogin">
    <VerticalStackLayout Padding="400">
        <Label 
            Text="Welcome User! (Input your name and email)"
            FontSize="Large"
            HorizontalOptions="Center"
            Style="{StaticResource HeaderlabelStyle}"
            />

        <Entry
            x:Name="NameEntry"
            Placeholder="Input name:"
            />

        <Entry
            x:Name="EmailEntry"
            Placeholder="Input email:"
            
            />

        <Button
            x:Name="EnterButton"
            Text="Enter"
            WidthRequest="200"
            Clicked="OnHomePage"
            />

        <Button
            x:Name="CreateAccountButton"
            Text="Create new account"
            WidthRequest="200"
            />


    </VerticalStackLayout>
</ContentPage>
