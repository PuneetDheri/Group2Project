<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMediaLibrary.Resources.Styles.AppStyles">
    
    <Style TargetType="Label" x:Key="CommonlabelStyle">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="Label" x:Key="HeaderlabelStyle" BasedOn="{StaticResource CommonlabelStyle}">
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="BackgroundColor" Value="Turquoise"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="Margin" Value="10"/>

    </Style>

     <Style TargetType="Button" x:Key="ButtonStyle" >
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="BackgroundColor" Value="#3D4B4C"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="Margin" Value="10"/>

    </Style>





</ResourceDictionary>
