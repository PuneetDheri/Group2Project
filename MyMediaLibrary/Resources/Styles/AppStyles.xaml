<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMediaLibrary.Resources.Styles.AppStyles">


    <!--AUTHORS: JULIUS AND PUNEET (STYLES THAT IS USED FOR BUTTONS AND LABELS IN THE UI)-->

    <Style TargetType="Label" x:Key="CommonlabelStyle">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="Label" x:Key="HeaderlabelStyle" BasedOn="{StaticResource CommonlabelStyle}">
        <Setter Property="TextColor" Value="#F9C367"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontFamily" Value="Lobster"/>
    

    </Style>


     <Style TargetType="Button" x:Key="ButtonStyle" >
        <Setter Property="TextColor" Value="#85DAFF"/>
        <Setter Property="BackgroundColor" Value="#115B69"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="Margin" Value="10"/>

    </Style>



    <Style TargetType="Entry" x:Key="EntryStyle">
        <Setter Property="WidthRequest" Value="350"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>


    </Style>





</ResourceDictionary>
